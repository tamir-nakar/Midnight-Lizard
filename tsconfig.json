{
    "compilerOptions": {
        "strict": true,
        "pretty": true,
        "outDir": "./js/",
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2017",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ]
    }
}